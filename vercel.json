{
  "version": 2,
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/index.py": {
      "runtime": "vercel-python@3.11",
      "includeFiles": "src/static/**"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.py" },
    { "source": "/:path*", "destination": "/api/index.py" }
  ]
}
