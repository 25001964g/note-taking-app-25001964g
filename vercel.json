{
  "version": 2,
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python", "config": { "pythonVersion": "3.11" } }
  ],
  "functions": {
    "api/index.py": {
      "includeFiles": "src/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "src": "/(.*)", "dest": "api/index.py" }
  ]
}
